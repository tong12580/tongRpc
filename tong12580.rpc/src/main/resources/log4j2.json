{
  "configuration": {
    "status": "OFF",
    "name": "rpc-service",
    "properties": {
      "property": [
        {
          "name": "LOG_HOME",
          "value": "./logs"
        },
        {
          "name": "SERVER_FILE_NAME",
          "value": "server"
        },
        {
          "name": "CLIENT_FILE_NAME",
          "value": "client"
        }
      ]
    },
    "appenders": {
      "Console": {
        "name": "Console",
        "target": "SYSTEM_OUT",
        "ThresholdFilter": {
          "level": "info",
          "onMatch": "ACCEPT",
          "onMismatch": "DENY"
        },
        "PatternLayout": {
          "pattern": "%d{HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%xEx%n"
        }
      },
      "RollingRandomAccessFile": {
        "name": "Error",
        "fileName": "${LOG_HOME}/error.log",
        "filePattern": "${LOG_HOME}/$${date:yyyy-MM}/%d{MM-dd-yyyy}-%i-error.log.gz",
        "ThresholdFilter": {
          "level": "error",
          "onMatch": "ACCEPT",
          "onMismatch": "DENY"
        },
        "PatternLayout": {
          "pattern": "%d{yyyy.MM.dd 'at' HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n"
        },
        "Policies": {
          "SizeBasedTriggeringPolicy": {
            "size": "10 MB"
          }
        }
      },
      "RollingFile": [
        {
          "name": "serverFile",
          "fileName": "${LOG_HOME}/${SERVER_FILE_NAME}.log",
          "filePattern": "${LOG_HOME}/$${date:yyyy-MM}/${SERVER_FILE_NAME}-%d{MM-dd-yyyy}-%i.log.gz",
          "ThresholdFilter": {
            "level": "info",
            "onMatch": "ACCEPT",
            "onMismatch": "DENY"
          },
          "PatternLayout": {
            "pattern": "%d{yyyy-MM-dd 'at' HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n"
          },
          "Policies": {
            "SizeBasedTriggeringPolicy": {
              "size": "10 MB"
            }
          }
        },
        {
          "name": "clientFile",
          "fileName": "${LOG_HOME}/${CLIENT_FILE_NAME}.log",
          "filePattern": "${LOG_HOME}/$${date:yyyy-MM}/${CLIENT_FILE_NAME}-%d{MM-dd-yyyy}-%i.log.gz",
          "ThresholdFilter": {
            "level": "info",
            "onMatch": "ACCEPT",
            "onMismatch": "DENY"
          },
          "PatternLayout": {
            "pattern": "%d{yyyy-MM-dd 'at' HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n"
          },
          "Policies": {
            "SizeBasedTriggeringPolicy": {
              "size": "10 MB"
            }
          }
        }
      ]
    },
    "loggers": {
      "logger": [
        {
          "name": "org.apache.tomcat.util.net.NioSelectorPool",
          "level": "warn",
          "AppenderRef": [
            {
              "ref": "serverFile"
            },
            {
              "ref": "clientFile"
            }
          ]
        },
        {
          "name": "org.springframework.web",
          "level": "warn",
          "AppenderRef": [
            {
              "ref": "serverFile"
            },
            {
              "ref": "clientFile"
            }
          ]
        },
        {
          "name": "io.github.tong12580.rpc.client",
          "level": "info",
          "AppenderRef": {
            "ref": "clientFile"
          }
        },
        {
          "name": "io.github.tong12580.rpc.service",
          "level": "info",
          "AppenderRef": {
            "ref": "serverFile"
          }
        }
      ],
      "root": {
        "level": "info",
        "AppenderRef": [
          {
            "ref": "Console"
          },
          {
            "ref": "Error"
          },
          {
            "ref": "serverFile"
          },
          {
            "ref": "clientFile"
          }
        ]
      }
    }
  }
}